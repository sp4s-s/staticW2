<header class="fixed top-0 left-0 w-full z-50 bg-gray-800 dark:bg-gray-950 text-white p-4">
  <div class="container mx-auto flex justify-between items-center">
    <h1 class="text-lg font-bold">Documentation</h1>
    <button id="dark-mode-toggle" class="px-4 py-2 bg-gray-700 rounded-md">
      Toggle Dark Mode
    </button>
  </div>
</header>

<script>
  const toggleButton = document.getElementById('dark-mode-toggle');
  toggleButton.addEventListener('click', () => {
    document.body.classList.toggle('dark');
  });
</script>